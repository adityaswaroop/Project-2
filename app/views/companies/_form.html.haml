                    %td= f.check_box :email2
                  %tr
                    %td.td_width
                      Multiple Group:
                    %td= f.check_box :email2
                  %tr
                    %td.spacing
      .tabbertab
        %h2 Branch Detail
        %div
          %table.disp_data{:align => "center", :cellpadding => "5", :cellspacing => "0"}
            %tr
              %td{:width => "50%"}
                %table{:cellpadding => "0", :cellspacing => "0", :width => "100%"}
                  %tr
                    %td.td_width.main_title{:colspan => "2"}
                      Branch Details:
                  %tr
                    %td.td_height_form
                  %tr
                    %td.td_width
                      Branch:
                    %td= f.text_field :email2
                  %tr
                    %td.td_width
                      Resp. Person:
                    %td= f.text_field :email2
                  %tr
                    %td.td_width
                      Address:
                    %td= f.text_field :email2
                  %tr
                    %td.td_width
                      PF Group:
                    %td= f.text_field :email2
                  %tr
                    %td.td_width
                      PT Group:
                    %td= f.text_field :email2
                  %tr
                    %td.td_width
                      ESI Group:
                    %td= f.text_field :email2
                  %tr
                    %td.spacing

              %td{:width => "50%"}

      #form_button
        .actions= f.submit

