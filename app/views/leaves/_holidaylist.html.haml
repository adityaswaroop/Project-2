!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title
  %body{:style => "width: 310px"}
    %div{:style => "border-style: solid; width: 300px"}
      %table{:style => "width:100%;"}
        %tr
          %td{:align => "center", :colspan => "3", :style => "font-family: Verdana; font-size: large; font-weight: bold;"}
            Holiday List
            %hr/
        %tr
          %td{:align => "right", :style => "font-family: Verdana; font-size: small"}
            Attendance:
          %td{:align => "right", :style => "font-family: Verdana; font-size: small"}
          %td{:style => "font-family: Verdana; font-size: small"}
            %select{:name => "cmbAttendance", :style => "width:100%;"}
              %option Managers
              %option Workers
              %option Other Staff
        %tr
          %td{:align => "right", :style => "font-family: Verdana; font-size: small"}
            Date:
          %td{:align => "right", :style => "font-family: Verdana; font-size: small"}
          %td{:style => "font-family: Verdana; font-size: small"}
            %input#txtDate{:type => "text"}/
        %tr
          %td{:align => "right", :style => "font-family: Verdana; font-size: small"}
            Holiday:
          %td{:align => "right", :style => "font-family: Verdana; font-size: small"}
          %td{:style => "font-family: Verdana; font-size: small"}
            %input#txtHoliday{:type => "text"}/
        %tr
          %td{:align => "right", :colspan => "3", :style => "font-family: Verdana; font-size: small"}
            %hr/
        %tr
          %td{:align => "right", :style => "font-family: Verdana; font-size: small"}
            %input#btnSave{:type => "button", :value => "Save"}/
          %td{:align => "right", :style => "font-family: Verdana; font-size: small"}
          %td{:style => "font-family: Verdana; font-size: small"}
            %input#btnCancel{:type => "button", :value => "Cancel"}/
