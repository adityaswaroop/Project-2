      %h2 Basic Details
      %div
        %table.disp_data{:align => "center", :cellpadding => "2", :cellspacing => "2"}
          %tr
            %td.main_title{:colspan => "2"}
              Basic Details
          %tr
            %td{:width => "13%"} Ref No
            %td{:width => "30%"}
              %input{:name => "txtRefNo", :type => "text"}/
