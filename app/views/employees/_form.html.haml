            %td{:width => "30%"}
              %input{:name => "txtEmpNo", :type => "text"}/
          %tr
            %td Employee Name
            %td
              %input{:name => "txtEmpName", :type => "text"}/
            %td Short Name
            %td
              %input{:name => "txtshortName", :type => "text"}/
          %tr
            %td Father's Name
            %td
              %input{:name => "txtFName", :size => "30", :type => "text"}/
            %td Mother's Name
            %td
              %input{:name => "txtMName", :size => "30", :type => "text"}/
