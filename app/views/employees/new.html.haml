:javascript
  function fnShowSetCation()
  {
      var w = 1000;
      var h = 300;
      var left = (screen.width/2)-(w/2);
      var top = (screen.height/2)-(h/2);
      var targetWin = window.open ('SetCaption', 'SetCaption', 'toolbar=no, location=no, directories=no, status=no, menubar=no, scrollbars=no, resizable=no, copyhistory=no, width='+w+', height='+h+', top='+top+', left='+left);
  }
#page
  = render "common"
  #right-content
    %h1 New Employee
    = render "form"
    %input{:name => "", :type => "button", :value => "Create Employee"}
    %input{:name => "", :type => "button", :value => "SetCaption", :onclick => "fnShowSetCation()"}
